<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BookShop</display-name>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  
<!--   User -->
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>com.dvd.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
    <url-pattern>/UserController</url-pattern>
  </servlet-mapping>
<!--   BookStore -->
  <servlet>
    <servlet-name>BookStore</servlet-name>
    <servlet-class>com.dvd.controller.BookStoreController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookStore</servlet-name>
    <url-pattern>/BookStoreController</url-pattern>
  </servlet-mapping>
  
<!--   BookController -->
  <servlet>
    <servlet-name>BookController</servlet-name>
    <servlet-class>com.dvd.controller.BookController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookController</servlet-name>
    <url-pattern>/BookController</url-pattern>
  </servlet-mapping>
 
<!-- AuthorController  -->
	<servlet>
		<servlet-name>AuthorController</servlet-name>
		<servlet-class>com.dvd.controller.AuthorController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthorController</servlet-name>
		<url-pattern>/AuthorController</url-pattern>
	</servlet-mapping>
<!--   CartController -->
  <servlet>
  	<servlet-name>CartController</servlet-name>
  	<servlet-class>com.dvd.controller.CartController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CartController</servlet-name>
  	<url-pattern>/CartController</url-pattern>
  </servlet-mapping>
  
 
<!--   session Config -->
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>

</web-app>